<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- CardView to add shadow and padding -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:padding="16dp"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Task Title with larger text and a bottom margin -->
            <TextView
                android:id="@+id/taskTitleView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:padding="8dp"
                 />

            <!-- Divider to separate title and description -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginBottom="8dp" />

            <!-- Task Description with a subtle color and padding -->
            <TextView
                android:id="@+id/taskDescriptionView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@android:color/darker_gray"
                android:padding="8dp"
                android:background="@drawable/text_background" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
